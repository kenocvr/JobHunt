<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_saved_job_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:clickable="true"
    android:foreground="@drawable/ripple_effect"
    app:cardElevation="@dimen/z_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/item_saved_job_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary_dark"
            android:paddingStart="16dp"
            />


        <TextView
            android:id="@+id/item_saved_job_title"
            android:layout_below="@+id/item_saved_job_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_tertiary_dark"
            android:paddingStart="16dp"
            />


        <TextView
            android:id="@+id/item_saved_job_snippet"
            android:layout_below="@+id/item_saved_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="6"
            android:textColor="@color/text_secondary_dark"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            />

        <Button
            android:id="@+id/item_saved_job_remove_button"
            android:layout_below="@id/item_saved_job_snippet"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:text="@string/remove_button_title"
            />

        <Button
            android:id="@+id/item_saved_job_applied_button"
            android:layout_toEndOf="@id/item_saved_job_remove_button"
            android:layout_alignBaseline="@+id/item_saved_job_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_vect_close_24dp"
            android:drawablePadding="4dp"
            android:text="@string/applied_button_title"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>